<?php

$servername = "localhost";
$username = "root";
$password = "";
$dbname = "griya_idn";

// Membuat koneksi ke database
$conn = new mysqli($servername, $username, $password, $dbname);

// Cek koneksi
if ($conn->connect_error) {
    die("Koneksi gagal: " . $conn->connect_error);
}

// Memastikan bahwa 'id' ada di URL dan merupakan integer
$id = filter_input(INPUT_GET, 'id', FILTER_VALIDATE_INT);
if (!$id) {
    die("ID tidak valid.");
}

// Mengambil nama file gambar berdasarkan ID properti dan kemudian menghapusnya
$sql = "SELECT images FROM properties WHERE id = ?";
$stmt = $conn->prepare($sql);

if (!$stmt) {
    die("Kesalahan persiapan pernyataan: " . $conn->error);
}

$stmt->bind_param("i", $id);
$stmt->execute();
$stmt->bind_result($images);
$stmt->fetch();
$stmt->close();

if ($images) {
    $imageArray = explode(',', $images);
    foreach ($imageArray as $image) {
        $filePath = 'uploads/' . trim($image); // Trim untuk menghapus spasi di sekitar nama file
        if (file_exists($filePath)) {
            if (!unlink($filePath)) {
                echo "Gagal menghapus file: " . htmlspecialchars($filePath) . "<br>";
            }
        }
    }
}

// Menghapus data properti dari database
$sql = "DELETE FROM properties WHERE id = ?";
$stmt = $conn->prepare($sql);

if (!$stmt) {
    die("Kesalahan persiapan pernyataan: " . $conn->error);
}

$stmt->bind_param("i", $id);
if (!$stmt->execute()) {
    die("Kesalahan saat menghapus properti: " . $stmt->error);
}

$stmt->close();
$conn->close();

// Redirect setelah berhasil menghapus
header("Location: update_admin.php");
exit();
?>
